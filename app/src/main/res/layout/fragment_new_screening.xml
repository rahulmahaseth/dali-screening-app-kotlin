<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <EditText
        android:inputType="textPersonName"
        android:hint="@string/name"
        android:id="@+id/edit_regscreen_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:hint="@string/sclass"
            android:layout_weight="1"
            android:inputType="number"
            android:id="@+id/edit_regscreen_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="textCapCharacters"
            android:hint="@string/section"
            android:layout_weight="1"
            android:id="@+id/edit_regscreen_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:inputType="text"
        android:hint="@string/mother_tongue"
        android:layout_marginTop="10dp"
        android:id="@+id/edit_regscreen_mothertongue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="text"
        android:hint="@string/school_university"
        android:layout_marginTop="10dp"
        android:id="@+id/edit_regscreen_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="@string/date_of_birth"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:id="@+id/edit_regscreen_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RadioButton
            android:hint="@string/male"
            android:id="@+id/edit_regscreen_radio_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RadioButton
            android:hint="@string/female"
            android:id="@+id/edit_regscreen_radio_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:id="@+id/btn_screenreg_submit"
        android:text="@string/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>