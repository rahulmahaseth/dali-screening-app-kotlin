<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name = "item"
            type = "org.unesco.mgiep.dali.Data.Participant"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:drawableBottom="@color/colorPrimary"
            android:id="@+id/item_participant_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_marginVertical="5dp"
            android:paddingVertical="20dp">

            <ImageView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_child_01"/>

            <LinearLayout
                android:paddingLeft="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_screening_type"
                    android:textColor="#313030"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{item.name.toUpperCase()}"/>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>