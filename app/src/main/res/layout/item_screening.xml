<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="org.unesco.mgiep.dali.Data.Screening" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="4dp">

        <RelativeLayout
            android:id="@+id/item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableBottom="@color/colorPrimary"
            android:padding="10dp">

            <ImageView
                android:id="@+id/item_screening_child"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_child_36"/>

            <LinearLayout
                android:layout_toLeftOf="@+id/item_screening_done"
                android:layout_toRightOf="@+id/item_screening_child"
                android:id="@+id/item_screening_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="@{item.participantName}"
                    android:textColor="#333"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:id="@+id/tv_screening_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="@{item.type.toUpperCase()}"
                    android:textColor="#333"
                    android:textSize="@dimen/h3" />

            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/item_screening_done"
                android:tint="#4AAD52"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>