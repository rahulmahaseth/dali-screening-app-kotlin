<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.unesco.mgiep.dali">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:name=".Dagger.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_dali"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dali_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            />


        <activity android:name=".Activity.ScreeningActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".Activity.NewScreeningActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".Activity.LanguageSelect"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".Activity.ResultActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".Activity.SplashActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/SplashTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="82d2502b868c95d8fef1fe546bc493dca5979a50"
            />
    </application>
</manifest>
