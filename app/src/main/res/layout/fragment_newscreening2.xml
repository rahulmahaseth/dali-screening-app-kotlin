<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:background="@color/colorPrimary"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:windowSoftInputMode="adjustResize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:tint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range_black_24dp" />

        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/schedule" />

        <Switch
            android:textColorHint="@color/white"
            android:buttonTint="@color/white"
            android:id="@+id/switch_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tv_screenreg_schedule_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="32dp" />

        <Button
            android:id="@+id/btn_change_scheduled_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/change"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:paddingVertical="10dp"
        android:textSize="@dimen/h3"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/relationship_with_child" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/radio_class_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/class_teacher" />

        <RadioButton
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/radio_language_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/language_teacher" />

        <RadioButton
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/radio_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/other" />
    </RadioGroup>

    <TextView
        android:layout_marginVertical="10dp"
        android:textSize="@dimen/h3"
        android:textColor="@color/white"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/estimated_time_spent_with_child" />


    <EditText
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="8dp"
        android:background="@drawable/custom_edit_text"
        android:id="@+id/edit_time_spent_with_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/months"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <Button
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/btn_screenreg_schedule_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/next"
            android:visibility="gone" />

        <Button
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/btn_screenreg_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/next" />
    </LinearLayout>

</LinearLayout>