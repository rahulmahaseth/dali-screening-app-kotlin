<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE6F2">


    <TextView
        android:id="@+id/tv_home_welcome"
        android:layout_below="@id/tv_home_heading"
        android:gravity="center"
        android:textSize="@dimen/h1"
        android:text="@string/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_home_heading"
        android:gravity="center"
        android:textSize="@dimen/h1"
        android:text="DALI SCREENING"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/home_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="231dp"
        android:padding="20dp"
        android:text="DALI is the first screening and assessment tool for dyslexia in regional Indian languages."
        android:textSize="@dimen/h3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/aliens"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_cartoonshome" />

</RelativeLayout>